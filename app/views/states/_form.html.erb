<%= form_for(@state) do |f| %>
    <% if @state.errors.any? %>
        <div class="albox errorbox" style="z-index: 670;">
          <b><%= t("errors") %> :</b>
          <% @state.errors.messages.each do |msg| %>
              <li><%= msg[1][0] %></li>
          <% end %>
          <a href="#" class="close tips" original-title="close"><%= t("close") %></a>
        </div>
    <% end %>

    <div class="st-form-line">
      <span class="st-labeltext"><%= t("country.country") %></span>
      <%= f.select :country_id, Country.all.map { |f| [t(f.name.downcase),f.id] }, { :prompt => t("select_one") }, { :class => 'uniform', :style => "opacity: 0;" } %>
    </div>

    <div class="st-form-line">
      <span class="st-labeltext"><%= t("name") %></span>
      <%= f.text_field :name, :class => "st-forminput"%>    </div>

    <div class="button-box">

      <%= link_to t("cancel"), states_path, :class => "st-clear" %>
      <%= f.submit t("save"), :class => "st-button"%>
    </div>
<% end %>