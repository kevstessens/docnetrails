<h1>Listing doctors</h1>

<table>
  <tr>
    <th>User</th>
    <th>Hour from</th>
    <th>Hour to</th>
    <th>Shift duration</th>
    <th>Medical specification</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @doctors.each do |doctor| %>
  <tr>
    <td><%= doctor.user %></td>
    <td><%= doctor.hour_from %></td>
    <td><%= doctor.hour_to %></td>
    <td><%= doctor.shift_duration %></td>
    <td><%= doctor.medical_specification %></td>
    <td><%= link_to 'Show', doctor %></td>
    <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
    <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

