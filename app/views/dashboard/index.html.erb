<!-- START CONTENT -->
<div class="content">

  <!-- START NAVIGATION -->
  <div class="grid740" style="z-index: 720;">
    <ul class="pagewrap">
      <li><%= link_to t("dashboard.dashboard"), root_path %></li>
    </ul>
  </div>


  <% unless @project.nil? %>

  <!-- STATS -->

  <!-- end charts -->

  <!-- request list -->
      <div class="grid740" style="z-index: 600;">

        <% if can? :index, User %>
            <a href="<%= users_path %>" class="dashbutton">	<img src="/assets/icons/dashbutton/group.png" width="55" height="32" alt="icon">	<b><%= t("users.users")%></b></a>
        <%end%>
        <% if can? :index, Project %>
            <a href="<%= projects_path %>" class="dashbutton">	<img src="/assets/icons/dashbutton/applications.png" width="25" height="32" alt="icon">	<b><%= t("projects.projects")%></b></a>
        <% end %>
        <a href="<%= features_path %>" class="dashbutton">	<img src="/assets/icons/dashbutton/documents.png" width="25" height="32" alt="icon">	<b><%= t("features.features")%></b></a>
        <a href="<%= bugs_path %>" class="dashbutton">	<img src="/assets/icons/dashbutton/help.png" width="32" height="32" alt="icon">	<b><%=t("bugs.bugs") %></b></a>
        <a href="<%= requests_path %>" class="dashbutton">	<img src="/assets/icons/dashbutton/info.png" width="32" height="32" alt="icon">	<b><%= t("requests.requests")%></b>	</a>
        <% if !current_user.external? %>
            <a href="<%= calendar_path %>" class="dashbutton">	<img src="/assets/icons/dashbutton/calendar.png" width="35" height="32" alt="icon">	<b><%= t("events.calendar")%></b>	<%= t("events.timeline")%></a>
        <% end %>
        <a href="<%= calendar_events_path %>" class="dashbutton">	<img src="/assets/icons/dashbutton/calendar.png" width="35" height="32" alt="icon">	<b><%= t("events.calendar")%></b>	<%= t("events.events")%></a>


        <a href="<%= notifications_path %>" class="dashbutton">	<img src="/assets/icons/dashbutton/megaphone.png" width="33" height="32" alt="icon">	<b><%=t("notifications")%></b></a>

        <% if !current_user.external? %>
            <a href="<%= invested_hours_path %>" class="dashbutton">	<img src="/assets/icons/dashbutton/timer.png" width="32" height="32" alt="icon">	<b><%=t("dashboard.hours_worked") %></b></a>
        <% end %>
        <div class="clear" style="z-index: 580;"></div>
      </div>
  <!-- END FEATURES TABLE -->

      <!-- Charts -->
      <%= render :partial => 'charts' %>

  <% end %>

