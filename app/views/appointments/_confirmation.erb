    <div class="modal-header">
      <h3 id="myModalLabel"><%= t("confirm.appointment") %></h3>
    </div>

    <table width="400">
      <tr height="20" />
      <tr height="30">
      <td width="200"> <%= t("date") %>:</td> <td width="200"> <input id="date_display" readonly> </td>
      </tr>
      <tr height="30">
        <td width="200"> <%= t("hour") %>:</td> <td width="200"> <input id="hour_display" readonly> </td>
      </tr>
      <tr height="30">
      <td width="200"> <%= t("doctor.doctor") %>:</td> <td width="200"> <%= @appointment.doctor.user.full_name %> </td>
      </tr>
      <tr height="30">
      <td width="200"> <%= t("matter") %>:</td>
      <td width="200"> <select id="specifications">
      <% (@appointment.doctor.medical_specifications).each do |f| %>
      <option value="<%= f.id %>" ><%= f.name %>
      <% end %>
      </select> </td> </tr>
    </table>
    </br>

    <div class="button-box" style="float:right;">
      <a href="" class="st-clear" data-dismiss="modal" aria-hidden="true"><%= t("cancel") %></a>
      <button onclick="confirm()" class="st-clear" data-dismiss="modal" aria-hidden="true">Confirm</button>
      <script type="text/javascript">
          function confirm() {
              var id = $("#specifications option:selected").val();
              var specification = document.getElementById("specification");
              specification.value = id;
              var button = document.getElementById("button");
              button.click()
          }
      </script>
    </div>